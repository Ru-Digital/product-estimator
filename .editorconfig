# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# PHP files
[*.php]
indent_size = 4
max_line_length = 120

# JavaScript files
[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100

# CSS/SCSS files
[*.{css,scss,less}]
indent_size = 2
max_line_length = 100

# HTML files
[*.{html,htm}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# XML files
[*.xml]
indent_size = 2

# Config files
[{package.json,.travis.yml}]
indent_size = 2

# WordPress files
[{*.pot,*.po}]
indent_style = space
indent_size = 4

# SQL files
[*.sql]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
end_of_line = lf

# Windows files
[*.bat]
end_of_line = crlf

# Composer files
[composer.json]
indent_size = 4

# Git files
[.git*]
indent_style = tab

# Preserve specific files
[{Makefile,**.mk}]
indent_style = tab