# Browser configuration
BROWSER=chromium     # chromium, firefox, webkit
HEADLESS=true        # true or false
SLOWMO=0             # Slow down execution by X milliseconds

# Environment URLs
BASE_URL=http://localhost/wp  # WordPress installation URL

# Test configuration
RECORD_VIDEO=false   # Whether to record videos of test runs
DEBUG=pw:api         # Enables Playwright API debugging (or PWDEBUG=1)

# WordPress credentials for admin tests
WP_ADMIN_USERNAME=admin
WP_ADMIN_PASSWORD=admin_password